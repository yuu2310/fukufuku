<%= render 'public/nav' %>
<div class="container">
  <div class="row mt-5">
    <div class="col-ms-2">
      <h5>新規投稿</h5>
    </div>
  </div>

  <%= form_with model: @post_header, url: posts_path, local: true, method: :post do |f| %>

    <div class="mt-3">
      <p><%= f.file_field :image, accept: "image/*" %></p>

      <h4 class="mt-5 mb-5">カテゴリー選択</h4>

      <%= f.fields_for :post_details do |pd_t| %>
        <div class="mb-3">
        <%= pd_t.label :type_id, "トップス" %>
        <%= pd_t.collection_select :category_id, @tops, :id, :category_name, { prompt: "--選択してください--" }  %>
    <%#= f.collection_select :保存先のカラム名, テーブル（モデル）名.all, :実際にDBに保存させるカラム名, :選択肢に用いるカラム名, include_blank: "選択して下さい" %>
        <%= pd_t.select :size, [["S", "S"], ["M", "M"], ["L", "L"], ["XL", "XL"]], include_blank: "--サイズを選択して下さい--", size: 30 %>
      </div>
      <% end %>


      <%= f.fields_for :post_details do |pd_j| %>
      <div class="mb-3">
        <%= pd_j.label :type_id, "ジャケット/アウター" %>
        <%= pd_j.collection_select :category_id, @jakets, :id, :category_name, { prompt: "--選択してください--" } %>
        <%= pd_j.select :size, [["--","--"], ["S", "S"], ["M", "M"], ["L", "L"], ["XL", "XL"]], include_blank: "--サイズを選択して下さい--", size: 30 %>
      </div>
      <% end %>


      <%= f.fields_for :post_details do |pd_p| %>
      <div class="mb-3">
        <%= pd_p.label :type_id, "パンツ" %>
        <%= pd_p.collection_select :category_id, @pants, :id, :category_name, { prompt: "--選択してください--" }  %>
        <%= pd_p.select :size, [["S", "S"], ["M", "M"], ["L", "L"], ["XL", "XL"]], include_blank: "--サイズを選択して下さい--", size: 30 %>
      </div>
      <% end %>


      <%= f.fields_for :post_details do |pd_s| %>
      <div class="mb-3">
        <%= pd_s.label :type_id, "シューズ" %>
        <%= pd_s.collection_select :category_id, @shoes, :id, :category_name, { prompt: "--選択してください--" }  %>
        <%= pd_s.select :size, [["24cm", "24cm"], ["24.5cm", "24.5cm"], ["25cm", "25cm"],
        ["25.5cm", "25.5cm"], ["26cm", "26cm"], ["26.5cm", "26.5cm"],
        ["27cm", "27cm"], ["27.5cm", "27.5cm"], ["28cm", "28cm"], ["28.5cm", "28.5cm"]],
        include_blank: "--サイズを選択して下さい--", size: 30 %>
      </div>
      <% end %>


      <%= f.fields_for :post_details do |pd_a| %>
      <div>
        <%= pd_a.label :type_id, "アクセサリー" %>
        <%= pd_a.collection_select :category_id, @accessories, :id, :category_name, { prompt: "--選択してください--" }  %>
      </div>
      <% end %>

      <%= f.fields_for :post_details do |pd_a_t| %>
      <div>
        <%= pd_a_t.label :type_id, "アクセサリー2" %>
        <%= pd_a_t.collection_select :category_id, @accessories_two, :id, :category_name, { prompt: "--選択してください--" }  %>
      </div>
      <% end %>
    </div>

    <div class="mt-5">
      <p><%= f.text_area :comment, size: "50x20" %></p>
    </div>
    <p><%= f.submit "投稿" %></p>
  <% end %>

</div>

