<div class="container">

    <%= render 'public/nav' %>

  <div class="row mt-5">
    <div class="col-ms-2">
      <h5>新規投稿</h5>
    </div>
  </div>
    <%= form_with model: @post, url: posts_path, method: :post do |f| %>

  <div class="mt-3">

    <p><%= f.file_field :image, accept: "image/*" %></p>

    <h4 class="mt-5 mb-5">カテゴリー選択</h4>

    <div class="mb-3">
      <%= f.label :type_id, "tops" %>
      <%= f.collection_select :category_id, @tops, :id, :category_name, { prompt: "--選択してください--" }  %>
  <%#= f.collection_select :保存先のカラム名, テーブル（モデル）名.all, :実際にDBに保存させるカラム名, :選択肢に用いるカラム名, include_blank: "選択して下さい" %>

    </div>
 <%#= f.select :size, [["S", "S"], ["M", "M"], ["L", "L"], ["XL", "XL"]], include_blank: "--選択して下さい--" %>


    <div class="mb-3">
      <%= f.label :type_id, "bottoms" %>
      <%= f.collection_select :category_id, @bottoms, :id, :category_name, { prompt: "--選択してください--" }  %>
    </div>

    <div>
      <%= f.label :type_id, "shoes" %>
      <%= f.collection_select :category_id, @shoes, :id, :category_name, { prompt: "--選択してください--" }  %>
    </div>

  </div>

  <div class="mt-5">
    <p><%= f.text_area :post_content, size: "50x20" %></p>
  </div>






    <p><%= f.submit "投稿" %></p>
    <% end %>

</div>

